<div class="header">
  <h1>Restaurants</h1>
  <%= link_to 'Add a Restaurant', new_restaurant_path, class: 'btn btn-primary add-btn' %>
</div>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
  <p><%= restaurant.address %></p>
<% end %>


